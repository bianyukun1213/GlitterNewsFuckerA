        </view>
    </view>
</view>
<view class="temp_all" style="width:{{screen_width}}px;">
    <view class="index_down" wx:if="{{login_sta}}">
        <view class="my_sms">
            <view style="width:100%; height:40px; float:left;"></view>
            <view class="my_sms_cen">
                <view class="my_headview">
                    <image src="{{userhead}}"></image>
                </view>
                <view class="my_headright">
                    <view class="my_head_r_up">
                        <view class="my_nickt_txt">{{usernick}}</view>
                    </view>
                    <view class="my_head_r_down">单位：{{userqianming}}</view>
                </view>
            </view>
            <view class="my_sms_down">
                <view class="my_study_sta" wx:if="{{curStudySta==0}}">
                    <text decode="{{true}}">您&nbsp;&nbsp;<text class="heise">尚未完成</text>&nbsp;&nbsp;当日学习目标</text>
                </view>
                <view class="my_study_sta" wx:if="{{curStudySta==1}}">
                    <text decode="{{true}}">您&nbsp;&nbsp;<text class="hongse">已完成</text>&nbsp;&nbsp;当日学习目标</text>
                </view>
                <view class="my_study_sta">
                    <text decode="{{true}}">截止&nbsp;{{nowtime}}&nbsp;您已累计学习&nbsp;&nbsp;<text class="hongse">{{StudyAllDay}}</text>&nbsp;&nbsp;天</text>
                </view>
            </view>
        </view>
        <view class="jp_title">
            <view class="jp_title_txt">我的声音作品（{{userlist.length}}个）</view>
        </view>
        <block wx:if="{{userlist.length>0}}">
            <view class="one_list" wx:for="{{userlist}}" wx:for-item="lytem" wx:key="lyid">
                <view class="one_nei">
                    <view class="one_right">
          {{lytem.fu_title}}
        </view>
                    <view bindtap="deleteLuyin" class="deletetxt" data-id="{{lytem.luyinid}}">删除</view>
                    <view bindtap="audioPlay" class="playerdiv" data-id="{{index}}" data-name="onesta" data-url="{{lytem.filename}}" wx:if="{{index!=indexCurrent}}">
                        <image class="anniu" src="../imgs/bf.png"></image>
                    </view>
                    <view bindtap="audioPause" class="playerdiv" data-id="{{index}}" data-name="onesta" wx:if="{{index==indexCurrent}}">
                        <image class="anniu" src="../imgs/zt.png"></image>
                    </view>
                </view>
            </view>
        </block>
        <!--修改了代码，增加长按跳转。-->
        <view class="nocontent" wx:else bindlongpress="onLongPress">还没有朗读内容，快去朗读吧~</view>
    </view>
    <view class="no_login_center" wx:else>
        <view class="no_login_up">
            <view class="no_login_head">
                <image src="../imgs/nologin.png"></image>
            </view>
            <view class="no_login_ms">未登录</view>
        </view>
        <view class="login_center">
            <view bindtap="login" class="login_button">登录</view>
        </view>
    </view>
    <view class="shouquan_all" wx:if="{{isHide}}">
        <view class="shouquan">
            <view wx:if="{{canIUse}}">
                <view class="content">
                    <view class="sq_txt">参与累计时长需要获取以下权限</view>
                    <text class="gxxx">获得你的公开信息(昵称，头像等)</text>
                    <view class="tel_view">
                        <view class="tel_input_views">
                            <input bindinput="inputTel" maxlength="11" placeholder="手机号码" type="number"></input>
                        </view>
                        <view class="sendbacksmsview">{{sendsmsback}}</view>
                    </view>
                    <view class="yzm_view">
                        <input bindinput="inputCode" maxlength="8" placeholder="验证码" type="number"></input>
                    </view>
                    <view class="tel_view">
                        <view class="sendcodeview">
                            <button bindtap="sendCode" disabled="{{smsFlag}}" style="color:{{sendColor}};font-size:12px;width:88px;">{{sendTime}}</button>
                        </view>
                    </view>
                </view>
                <view class="bottomview">
                    <button bindgetuserinfo="bindGetUserInfo" class="bottom" disabled="{{souquanFlag}}" lang="zh_CN" openType="getUserInfo" type="primary">
          授权登录
          </button>
                </view>
            </view>
            <view wx:else>请升级微信版本</view>
        </view>
    </view>
</view>
